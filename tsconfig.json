{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2019",
        "lib": [
            "ES6"
        ],
        "outDir": "build",
        "declaration": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
}